<% if product = Product.find_by_id(item.product_id) %>
  <tr>
    <td>
      <img class="product_img" src="<%= product.image %>" />
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= humanized_money_with_symbol item.item_price_cents / 100.00 %>
    </td>
    <td>
      <%= item.quantity %>
    </td>
    <td>
      <%= humanized_money_with_symbol item.item_price_cents * item.quantity / 100 %>
    </td>
  </tr>
<% end %>